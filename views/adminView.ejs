<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>EJS21 blog</title>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="d-flex justify-content-end">
      <a class="btn btn-secondary btn-lg" href="http://localhost:3000/admin/crear"
        >Crear nuevo articulo</a
      >
    </div>

    <table class="table table-hover m-3">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Fecha de creacion</th>
          <th scope="col">Autor</th>
          <th scope="col">Accion</th>
        </tr>
      </thead>
      <tbody>
        <% for( const article of articles ) { %>
        <tr>
          <th scope="row"><%= article.id %></th>
          <td><%= article.title %></td>
          <td><%= format(article.createdAt, `MMMM dd',' yyyy ',' HH':'mm' `)%></td>
          <td><%= article.author %></td>
          <td>
            <div>
              <a href="/admin/editar/<%= article.id %> " class="btn btn-light my-3">Editar</a
              ><a href="/admin/eliminar/<%= article.id %> " class="btn btn-danger mx-2">Eliminar</a>
            </div>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>

    <%- include('partials/footer') %>
  </body>
</html>
